<footer class="m-0">
    <div class="col-md-4 text-center">
        <img src="{{ asset('media/img/logo-white.png') }}" alt="Logo Quai Antique" width="150" height="150">
    </div>
    <div class="col-md-4 text-center opening-hours">
        <h4 class="footer-title">Horaires</h4>
        <ul>
            {% for openingHour in openingHours %}
                <li>
                    <p>
                        {{ openingHour.getDay() }} :
                        {% if openingHour.getOpeningHoursMorning() is null and openingHour.getClosingHoursMorning() is null %}
                            Fermé
                        {% else %}
                            {{ openingHour.getOpeningHoursMorning()|date('H:i','Europe/Paris') }} - {{ openingHour.getClosingHoursMorning()|date('H:i', 'Europe/Paris') }}
                        {% endif %}
                        /
                        {% if openingHour.getOpeningHoursEvening() is null and openingHour.getClosingHoursEvening() is null %}
                            Fermé
                        {% else %}
                            {{ openingHour.getOpeningHoursEvening()|date('H:i','Europe/Paris') }} - {{ openingHour.getClosingHoursEvening()|date('H:i','Europe/Paris') }}
                        {% endif %}
                    </p>
                </li>
            {% endfor %}
        </ul>
    </div>
    <div class="col-md-4 text-center">
        <p class="droit">Tous droits réservés © {{ "now"|date("Y") }} Quai Antique</p>
    </div>
    </div>
    </div>
</footer>
