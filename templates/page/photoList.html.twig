{% extends 'base.html.twig' %}

{% block body %}

    <div class="container-photo-center">
        <div class="container-photo">
            <div class="title-photos">
                <h1>Liste des photos</h1>
            </div>
            <table class="tablePhotos">
                <thead>
                <tr>
                    <th></th>
                    <th>Photo</th>
                    <th class="nom-list-photo">Nom</th>
                    <th>Modifier</th>
                    <th>Supprimer</th> <!-- Rajout du bouton Supprimer -->
                </tr>
                </thead>
                <tbody>
                {% for photo in photos_list %}
                    {% set row_class = loop.index is even ? 'even-row' : 'odd-row' %}
                    <tr class="{{ row_class }}" >
                        <td>{{ loop.index }}</td>
                        <td><img src="{{ asset('media/upload/' ~ photo.imageName) }}" alt="{{ photo.customName }}"></td>
                        <td class="nom-list-photo">{{ photo.customName }}</td>
                        <td>
                            <a href="{{ path('edit_photo', {'id': photo.id}) }}">
                                <i class="fa fa-pencil"></i>
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('delete_photo', {'id': photo.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette photo ?')">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
