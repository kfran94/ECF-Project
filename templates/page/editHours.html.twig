{% extends 'base.html.twig' %}

{% block body %}
    <div class="center-container-edit-hours">
        <div class="container-edit-form">
            <div class="title-edit-hours">
                <h1>Modifier les horaires d'ouverture</h1>
            </div>

            <form method="post" action="{{ path('edit_opening_hours', {'id': openingHour.id}) }}">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col">
                        <h3>Service du midi</h3>
                        <div class="form-group">
                            <label for="{{ form.opening_hours_morning.vars.id }}">Heure d'ouverture</label>
                            {{ form_widget(form.opening_hours_morning) }}
                        </div>
                        <div class="form-group">
                            <label for="{{ form.closing_hours_morning.vars.id }}">Heure de fermeture</label>
                            {{ form_widget(form.closing_hours_morning) }}
                        </div>
                    </div>
                    <div class="col">
                        <h3>Service du soir</h3>
                        <div class="form-group">
                            <label for="{{ form.opening_hours_evening.vars.id }}">Heure d'ouverture</label>
                            {{ form_widget(form.opening_hours_evening) }}
                        </div>
                        <div class="form-group">
                            <label for="{{ form.closing_hours_evening.vars.id }}">Heure de fermeture</label>
                            {{ form_widget(form.closing_hours_evening) }}
                        </div>
                    </div>

                </div>
                <button type="submit" class="btn btn-primary">Enregistrer</button>

                {{ form_end(form) }}
            </form>
        </div>
    </div>
{% endblock %}
