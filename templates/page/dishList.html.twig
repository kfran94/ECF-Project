{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-photo-center">
        <div class="container-photo">
            <div class="title-photos">
                <h1>Liste des Plats</h1>
            </div>
            <table class="tablePhotos">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Prix</th>
                    <th>Description</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for plat in plats %}
                    <tr>
                        <td>{{ plat.id }}</td>
                        <td>{{ plat.name }}</td>
                        <td>{{ plat.price }}</td>
                        <td>{{ plat.description }}</td>
                        <td>
                            <a href="{{ path('plat_delete', {'id': plat.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce plat ?')">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <p class="message">Veuillez vous connecter sur ordinateur ou tablette pour accéder à ce tableau</p>
        </div>
    </div>

{% endblock %}
